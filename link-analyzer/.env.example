# Link Analyzer Service Configuration

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Link Analyzer

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=1

# External Services
GEMINI_API_KEY=your_gemini_api_key_here
YOUTUBE_API_KEY=your_youtube_data_api_key_here

# Rate Limiting Configuration (Gemini API)
GEMINI_MIN_REQUEST_INTERVAL=2.0  # Minimum seconds between requests (default: 2.0)
GEMINI_MAX_RETRIES=3  # Maximum retry attempts on failures (default: 3)
GEMINI_RETRY_MIN_WAIT=4.0  # Minimum wait time for exponential backoff (seconds, default: 4.0)
GEMINI_RETRY_MAX_WAIT=60.0  # Maximum wait time for exponential backoff (seconds, default: 60.0)

# Analysis Settings
MAX_VIDEO_DURATION=600  # 10 minutes (YouTube Shorts max)
MAX_VIDEO_SIZE_MB=100
REQUEST_TIMEOUT=120  # API request timeout (seconds)
YOUTUBE_DAILY_QUOTA_LIMIT=8  # Hours (Gemini free limit)

# Download Settings
TEMP_DIR=temp  # Temporary directory for downloaded media

# Service Configuration
DEBUG=true
LOG_LEVEL=INFO
