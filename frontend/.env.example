# ===== Environment =====
ENVIRONMENT=development

# ===== Backend API Configuration =====
API_BASE_URL=http://localhost:8000/api/v1
API_TIMEOUT=30000

# ===== Firebase Configuration =====
# Firebase Authentication, Messaging, Analytics, Crashlytics
# 1. Download google-services.json (Android) and GoogleService-Info.plist (iOS) from Firebase Console
# 2. Place them in android/app/ and ios/Runner/ respectively
FIREBASE_PROJECT_ID=your-firebase-project-id

# ===== Kakao Configuration =====
# Kakao Login SDK (소셜 로그인용)
KAKAO_NATIVE_APP_KEY=your_kakao_native_app_key
KAKAO_JAVASCRIPT_APP_KEY=your_kakao_javascript_app_key

# Kakao Map API (지도 표시용)
KAKAO_MAP_APP_KEY=your_kakao_map_app_key
KAKAO_MAP_JS_KEY=your_kakao_map_js_key

# ===== Social Login Configuration =====
# Google Sign-In
# Get from Firebase Console > Authentication > Sign-in method > Google
GOOGLE_CLIENT_ID_IOS=your-google-client-id-ios.apps.googleusercontent.com
GOOGLE_CLIENT_ID_ANDROID=your-google-client-id-android.apps.googleusercontent.com

# Apple Sign-In
# Use your app's Bundle ID
APPLE_CLIENT_ID=com.hotly.hotly_app

# ===== Feature Flags =====
ENABLE_ANALYTICS=false
ENABLE_CRASHLYTICS=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_DEBUG_LOGGING=true

# ===== App Configuration =====
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1
