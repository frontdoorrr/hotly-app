# ===== Environment =====
ENVIRONMENT=development

# ===== Supabase Configuration =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# OAuth Redirect (Deep Link)
REDIRECT_URL=hotly://login-callback

# ===== Backend API Configuration =====
API_BASE_URL=http://localhost:8000/api/v1
API_TIMEOUT=30000

# ===== Kakao Map API =====
KAKAO_MAP_APP_KEY=YOUR_KAKAO_APP_KEY_HERE
KAKAO_MAP_JS_KEY=YOUR_KAKAO_JS_KEY_HERE

# ===== Firebase Configuration =====
# Download google-services.json and GoogleService-Info.plist from Firebase Console
FIREBASE_PROJECT_ID=your-firebase-project-id

# ===== Feature Flags =====
ENABLE_ANALYTICS=false
ENABLE_CRASHLYTICS=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_DEBUG_LOGGING=true

# ===== App Configuration =====
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# ===== Social Login =====
GOOGLE_CLIENT_ID_IOS=your-google-client-id-ios
GOOGLE_CLIENT_ID_ANDROID=your-google-client-id-android
APPLE_CLIENT_ID=com.hotly.hotly_app.signin
