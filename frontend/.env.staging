# ===== Environment =====
ENVIRONMENT=staging

# ===== Supabase Configuration =====
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY=your-staging-anon-key-here

# OAuth Redirect (Deep Link)
REDIRECT_URL=hotly://login-callback

# ===== Backend API Configuration =====
API_BASE_URL=https://staging-api.hotly.app/api/v1
API_TIMEOUT=30000

# ===== Kakao Map API =====
KAKAO_MAP_APP_KEY=YOUR_KAKAO_APP_KEY_STAGING
KAKAO_MAP_JS_KEY=YOUR_KAKAO_JS_KEY_STAGING

# ===== Firebase Configuration =====
FIREBASE_PROJECT_ID=hotly-app-staging

# ===== Feature Flags =====
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_LOGGING=true

# ===== App Configuration =====
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# ===== Social Login =====
GOOGLE_CLIENT_ID_IOS=your-google-client-id-ios-staging
GOOGLE_CLIENT_ID_ANDROID=your-google-client-id-android-staging
APPLE_CLIENT_ID=com.hotly.hotly_app.staging.signin
