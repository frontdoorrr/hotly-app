[run]
source = app
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */migrations/*
    */alembic/*
    */venv/*
    */env/*
    app/main.py
    app/worker.py
    app/initial_data.py
    app/backend_pre_start.py
    app/celeryworker_pre_start.py
    app/tests_pre_start.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = htmlcov
title = Hotly App Test Coverage Report

[xml]
output = coverage.xml
