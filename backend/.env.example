# Hotly App Environment Configuration Template
# Copy this file to .env and fill in the actual values

# Application Settings
PROJECT_NAME="Hotly App"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# API Configuration
API_V1_STR="/api/v1"
SECRET_KEY="your-secret-key-here"
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# CORS Configuration (comma-separated URLs)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# PostgreSQL Database Configuration
POSTGRES_SERVER="localhost"
POSTGRES_USER="hotly_user"
POSTGRES_PASSWORD="hotly_password"
POSTGRES_DB="hotly_db"
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Firebase Authentication Configuration
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_API_KEY="your-firebase-api-key"
FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
FIREBASE_CREDENTIALS_PATH="path/to/service-account-key.json"
# Or use JSON string directly (for production/cloud environments)
FIREBASE_CREDENTIALS_JSON=""

# Firebase Cloud Messaging (FCM) Configuration
FCM_PROJECT_ID="your-firebase-project-id"

# OAuth Providers (for social login)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
APPLE_CLIENT_ID="com.your.app.identifier"
KAKAO_CLIENT_ID="your-kakao-app-key"

# Auth Rate Limiting
MAX_LOGIN_ATTEMPTS_PER_MINUTE=10
MAX_TOKEN_REFRESH_PER_HOUR=60

# Token Expiration Settings
ACCESS_TOKEN_EXPIRE_HOURS=1
REFRESH_TOKEN_EXPIRE_DAYS=30

# External API Keys (Optional)
KAKAO_API_KEY=""
GEMINI_API_KEY=""

# Testing
TESTING=false
TEST_DATABASE_URL=""
